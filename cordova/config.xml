<?xml version='1.0' encoding='utf-8'?>
<widget id="com.es.cryptoprice" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>CryptoPrice</name>
    <description>
        An app to inform us of price of the main crypto-coins
    </description>
    <author email="lmiguelfresneda@gmail.com" href="https://github.com/lmfresneda">
      Luis Miguel
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="DisallowOverscroll" value="true" />
    <preference name="StatusBarBackgroundColor" value="#1A237E" />
    <engine name="android" spec="^7.0.0" />
    <plugin name="cordova-plugin-statusbar" spec="^2.4.1" />
</widget>
